{block content}
{include _assets.latte}


<section class="main-banner">
    <div class="banner-wrapper">
        <div class="content">
            <h3>Jak vám můžeme pomoct?</h3>
            <div class="flex-wrapper fissbar">
                <img src="{$baseUrl}/assets/icons/search.svg">
                <p>Hledej odpověď</p>
            </div>
            <p class="bottom-note">v případě že jste nenalezli odpověď na svou otázku, kontaktujte nás</p>
        </div>
        <img src="{$baseUrl}/assets/images/banner.png">

    </div>
</section>

<!-- FAQ CARDS -->
<section class="versions">
    <div class="page-wrapper">
        <div class="version-cards">
            <div class="version-card">
                <img src="{$baseUrl}/assets/icons/business.svg">
                <h3>Pro podnikatele</h3>
                <p>Efektivní a přehledné účetnictví pro právnické i fyzické osoby.</p>
            </div>
            <div class="version-card">
                <img src="{$baseUrl}/assets/icons/handshake.svg">
                <h3>Pro příspěvkové organizace</h3>
                <p>Optimalizovaná verze pro veřejné organizace.</p>
            </div>
        </div>

        <div class="version-cards" style="margin-top: 25px;">
            <div class="version-card">
                <img src="{$baseUrl}/assets/icons/country.svg">
                <h3>Pro státní příspěvkové organizace</h3>
                <p>Řízení rozpočtu a dodržování státních předpisů.</p>
            </div>
            <div class="version-card">
                <img src="{$baseUrl}/assets/icons/boat.svg">
                <h3>Neziskové organizace</h3>
                <p>Efektivní správa neziskových projektů.</p>
            </div>
        </div>
    </div>
</section>

