{include _assets.latte}

<header class="header">
    <div class="header-container">
        <a href="{plink Home:default}">
            <div id="navlogo" class="logo-wrapper">
                <img src="{$baseUrl}/assets/images/nav-logo-white.png" />
            </div>
        </a>
        <nav class="navbar main">
            <ul>
                <li class="dropdown">
                    <a class="dropdown-toggle" href="{plink Products:default, 'category' => 'druhy-vina'}">Druhy vína<span class="navbar-arrow">
                            <i class="fa-solid fa-angle-right"></i></span></a>
                    <ul class="dropdown-menu">
                        {foreach $categories->categories as $categoryData}
                            <li>
                                <a class=""
                                    href="{plink 'Products:default', 'category' => $categoryData->slug}">{$categoryData->title}
                                </a>
                            </li>
                        {/foreach}
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" href="{plink Products:default , 'category' => 'zeme-puvodu'}">Země původu<span class="navbar-arrow">
                            <i class="fa-solid fa-angle-right"></i></span></a>
                    <ul class="dropdown-menu">
                        {foreach $categories->countries as $categoryData}
                            <li>
                                <a class=""
                                    href="{plink 'Products:default', 'category' => $categoryData->slug}">{$categoryData->title}
                                </a>
                            </li>
                        {/foreach}
                    </ul>
