<!-- Categories Section -->
<section class="categories">
  <div class="category-wrapper">
    <a href="{plink Products:default, 'category' => 'stavebni-chemie'}" class="category-item">
      <img src="{$baseUrl}/assets/images/categories/stavebni_chemie.png" />
      <div class="text">STAVEBNÍ CHEMIE</div>
    </a>
    <a href="{plink Products:default, 'category' => 'naterove-hmoty'}" class="category-item">
      <img src="{$baseUrl}/assets/images/categories/naterove_hmoty.png" />
      <div class="text">NÁTĚROVÉ HMOTY</div>
    </a>
    <a href="{plink Products:default, 'category' => 'osetreni-obuvi'}" class="category-item">
      <img src="{$baseUrl}/assets/images/categories/osetreni_obuvy.png" />
      <div class="text">OŠETŘENÍ OBUVI</div>
    </a>
    <a href="{plink Products:default, 'category' => 'cukrarska-aromata'}" class="category-item">
      <img src="{$baseUrl}/assets/images/categories/cukrarska_aromata.png" />
      <div class="text">CUKRÁŘSKÁ AROMATA</div>
    </a>
    <a href="{plink Products:default, 'category' => 'bazenova-chemie-prislusenstvi'}" class="category-item">
      <img src="{$baseUrl}/assets/images/categories/bazenova_chemie_prislusenstvi.png" />
      <div class="text">BAZÉNOVÁ CHEMIE A PŘÍSLUŠENSTVÍ</div>
    </a>
    <a href="{plink Products:default, 'category' => 'doplnkovy-sortiment'}" class="category-item">
      <img src="{$baseUrl}/assets/images/categories/doplnkovy_sortiment.png" />
      <div class="text">DOPLŇKOVÝ SORTIMENT</div>
    </a>
  </div>
</section>

<!-- Products Section-->
<section class="products">
  <div class="flex-wrapper column">
    <h2>NAŠE PRODUKTY</h2>
    {* <div class="product-tabs">
      <div class="tab">DOPORUČENÉ</div>
      <div class="tab">NOVINKY</div>
      <div class="tab">BESTSELLERY</div>
    </div> *}
  </div>
  <div class="product-list">
    {control core-recomendedProducts}
  </div>

  <div class="button-wrapper" style="margin-top: 100px">
    <a href="{plink Products:default}" class="cta-button outline">Přejít na všechny produkty</a>
  </div>
</section>

<!-- Help Section-->
<section class="help-section">
  <h3>NECHTE SI OD NÁS PORADIT</h3>
  <div class="help-list">
    <div class="help-item">
      <div class="category">
        <img class="product" src="{$baseUrl}/assets/images/help/hydrolizace.png" />
        <img class="mark" src="{$baseUrl}/assets/icons/questionMark.svg" />
      </div>
      <p>Jak zvolit správnou hydroizolaci?</p>
    </div>
    <div class="help-item">
      <div class="category">
        <img class="product" src="{$baseUrl}/assets/images/help/tmel.png" />
        <img class="mark" src="{$baseUrl}/assets/icons/questionMark.svg" />
      </div>
      <p>Jak vybrat správný tmel?</p>
    </div>
    <div class="help-item">
      <div class="category">
        <img class="product" src="{$baseUrl}/assets/images/help/nater.png" />
        <img class="mark" src="{$baseUrl}/assets/icons/questionMark.svg" />
      </div>
      <p>Jaký zvolit nátěr?</p>
    </div>
    <div class="help-item">
      <div class="category">
        <img class="product" src="{$baseUrl}/assets/images/help/montazni_pena.png" />
        <img class="mark" src="{$baseUrl}/assets/icons/questionMark.svg" />
      </div>
      <p>Jak vybrat montážní pěnu?</p>
    </div>
  </div>
</section>

