        /* Carousel styles */
        .carousel-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            margin-left: calc(-50vw + 50%);
            margin-right: calc(-50vw + 50%);
        }
        
        .carousel-track {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        
        .carousel-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 2.5s cubic-bezier(0.42, 0, 0.58, 1);
            overflow: hidden;
            z-index: 1;
        }
        
        .carousel-slide.active {
            opacity: 1;
            z-index: 2;
        }
        
        @keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }
        
        .carousel-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: brightness(0.5);
            transition: transform 8s ease;
            transform: scale(1);
        }
        
        .carousel-slide.active img {
            animation: zoomEffect 8s ease forwards;
        }
        
        @keyframes zoomEffect {
            0% { transform: scale(1); }
            100% { transform: scale(1.1); }
        }
        
        .fixed-content {
            visibility: hidden;
            position: absolute;
            top: 50%;
            left: 10%;
            right: auto;
            transform: translateY(-50%);
            max-width: 700px;
            display: flex;
            flex-direction: column;
